<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppMovilTrotaMundos.Models"
             x:Class="AppMovilTrotaMundos.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- ðŸŽ¨ Colores Globales -->
            <Color x:Key="PrimaryColor">gray</Color>
            <Color x:Key="SecondaryColor">#FF6F00</Color>
            <Color x:Key="BackgroundColor">#F5F5F5</Color>
            <Color x:Key="TextPrimaryColor">#212121</Color>
            <Color x:Key="DangerColor">#D32F2F</Color>

            <!-- ðŸ”¤ Estilo General para Labels -->
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- ðŸ”˜ Estilo para Botones -->
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <!-- âŽ Estilo para Botones de AcciÃ³n (Ejemplo: Eliminar) -->
            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="12,8"/>
            </Style>

            <!-- ðŸ“œ Estilo para CollectionView -->
            <Style TargetType="CollectionView">
                <Setter Property="Margin" Value="10"/>
            </Style>

            <!-- ðŸ“¦ Estilo para Cards (Frames) -->
            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <!-- ðŸš— Estilo para ListView en la app de refaccionaria -->
            <Style TargetType="ListView">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}"/>
                <Setter Property="SeparatorColor" Value="#BDBDBD"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilTrotaMundos.Views.MainPage"
             BackgroundColor="#1B1B2F"
             Title="Trotamundos">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cerrar Sesión" Command="{Binding LogoutCommand}" IconImageSource="logout_icon.png"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout>
        <Image Source="fondo_abstracto.png"
               Aspect="AspectFill"
               Opacity="0.2"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All" />

        <StackLayout Padding="20"
                     Spacing="20"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">

            <Label Text="Bienvenido"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start"
                   Margin="0,10,0,10" />
       

            <CollectionView x:Name="MenuCollectionView"
                            ItemsSource="{Binding MenuItems}"
                            SelectionMode="Single"
                            SelectionChanged="OnMenuItemSelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#3A3A5A"
                               CornerRadius="20"
                               Padding="20"
                               Margin="10"
                               HasShadow="False"
                               HeightRequest="140"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand">
                            <StackLayout VerticalOptions="CenterAndExpand"
                                         HorizontalOptions="CenterAndExpand">
<Label Text="{Binding IconUnicode}" 
       FontFamily="FA"
       FontSize="40"
       TextColor="White"
       HorizontalOptions="Center"
       VerticalOptions="Center" />






                                <Label Text="{Binding Title}"
                                       TextColor="White"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       Margin="0,10,0,0" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
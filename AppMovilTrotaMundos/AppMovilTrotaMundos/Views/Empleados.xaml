<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppMovilTrotaMundos.Views"
             xmlns:vm="clr-namespace:AppMovilTrotaMundos.ViewModels"
             x:Class="AppMovilTrotaMundos.Views.Empleados"
             Title="Empleados">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <!-- Buscador y botón para agregar cliente -->
            <Grid ColumnDefinitions="*,Auto">
                <Entry x:Name="SearchEntry"
                       Placeholder="Buscar Empleados..."
                       Text="{Binding SearchText}"
                       Grid.Column="0"/>
                <Button Text="Agregar Empleados"
                        Grid.Column="1"
                        Command="{Binding AgregarEmpleadoCommand}"
                        BackgroundColor="LightGreen"/>
            </Grid>

            <!-- Lista de clientes -->
            <CollectionView ItemsSource="{Binding FiltradosEmpleados}"
                             SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                            
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" HasShadow="True">
                            <StackLayout>
                                <Label Text="{Binding Nombre}" FontSize="24" />
                                <Label Text="{Binding Rol}" FontSize="18" />
                                <Label Text="{Binding Etatus}" FontSize="18" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

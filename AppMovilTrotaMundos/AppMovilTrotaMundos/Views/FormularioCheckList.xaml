               VerticalOptions="Center" HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Switch IsToggled="{Binding CheckList.limpiaparabrisas, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.limpiaparabrisas_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" 
                                      CommandParameter="{Binding CheckList.limpiaparabrisas_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarLimpiaparabrisasFotoCommand}" />

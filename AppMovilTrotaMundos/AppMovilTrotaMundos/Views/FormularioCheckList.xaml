<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppMovilTrotaMundos.Models" 
             xmlns:viewmodels="clr-namespace:AppMovilTrotaMundos.ViewModels" 
             x:DataType="viewmodels:FormularioChecklistViewModel"
             x:Class="AppMovilTrotaMundos.Views.FormularioCheckList">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:IntToBoolConverter x:Key="IntToBoolConverter" />
            <local:Base64ToImageSourceConverter x:Key="Base64ToImageSourceConverter" />
            <local:EditingStatusConverter x:Key="EditingStatusConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <local:SemaforoColorConverter x:Key="SemaforoColorConverter"/>
        </ResourceDictionary>
        <!-- Corrige la etiqueta de cierre -->
    </ContentPage.Resources>


    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Grid ColumnSpacing="15" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <Label Text="Check List General"
           FontAttributes="Bold"
           FontSize="Large"
           HorizontalOptions="Center"
           Grid.Row="0"
           Grid.ColumnSpan="2" />

                    <!-- Número de Orden -->
                    <Label Text="{Binding IsEditing, Converter={StaticResource EditingStatusConverter}, StringFormat=''}" />

                    <Label Text="{Binding TiempoTranscurrido}"
       FontSize="Large"
       HorizontalOptions="Center"
       VerticalOptions="CenterAndExpand" />

                    <Label Text="No. de Orden:"
           VerticalOptions="Center"
           Grid.Row="1"
           Grid.Column="0" />
                    <Entry Text="{Binding CheckList.Id_ordendeservicio, Mode=TwoWay}"
           Placeholder="Número de Orden"
           Grid.Row="1"
           Grid.Column="1" />

                    <!-- Picker para seleccionar el No. de Serie -->
                    <Label Text="No. de Serie:" 
       VerticalOptions="Center" 
       Grid.Row="2" 
       Grid.Column="0" />
                    <Entry Text="{Binding NumeroSerie, Mode=OneWay}" 
       IsReadOnly="True"
       Grid.Row="2" 
       Grid.Column="1" />


                    <Label Text="Fecha:"
           VerticalOptions="Center"
           Grid.Row="3"
           Grid.Column="0" />
                    <DatePicker Date="{Binding CheckList.Fecha}"
                Grid.Row="3"
                Grid.Column="1" />

  
                </Grid>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">

                    <!-- Título del checklist con semáforo -->
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Lectura de códigos de falla (N° de averías) en sus sistemas."
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />


                        <Label 
    Text="{Binding CheckList.lectura_codigos_SemaforoIcon}" 
    FontFamily="FA" 
    FontSize="30"
    TextColor="{Binding CheckList.lectura_codigos, Converter={StaticResource SemaforoColorConverter}}" />





                    </StackLayout>

                    <!-- Controles interactivos -->
                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">

                        <!-- Switch -->
                        <Switch IsToggled="{Binding CheckList.lectura_codigos, Converter={StaticResource IntToBoolConverter}}" 
                VerticalOptions="Center" />

                        <!-- Imagen miniatura -->
                        <Image Source="{Binding CheckList.lectura_codigos_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30"
               Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer 
                    Command="{Binding ExpandImageCommand}" 
                    CommandParameter="{Binding CheckList.lectura_codigos_foto}" />
                            </Image.GestureRecognizers>
                        </Image>

                        <!-- Ícono cámara (FontAwesome) -->
                        <Label Text="&#xf030;"  
               FontFamily="FA"
               FontSize="26"
               TextColor="#2196F3"
               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarLecturaCodigosFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Ícono video (FontAwesome) -->
                        <Label Text="&#xf03d;"  
               FontFamily="FA"
               FontSize="24"
               TextColor="#E53935"
               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarLecturaCodigosVideoCommand}" 
                                      CommandParameter="lectura_codigos_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <!-- Observaciones -->
                    <Entry Text="{Binding CheckList.lectura_codigos_observacion}"
           Placeholder="Observaciones"
           FontSize="16"
           BackgroundColor="#F5F5F5"
           Margin="0,5"
           TextColor="Black" />
                </StackLayout>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Funcionamiento del servofreno"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.servofreno_SemaforoIcon}"
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.servofreno, Converter={StaticResource IntToBoolConverter}}" VerticalOptions="Center" />
                        <Image Source="{Binding CheckList.servofreno_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.servofreno_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarServoFrenoFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarServoFrenoVideoCommand}" CommandParameter="servofreno_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.servofreno_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" Margin="0,5" TextColor="Black" />
                </StackLayout>



                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Funcionamiento del pedal de freno"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.pedal_freno_SemaforoIcon}"
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.pedal_freno, Converter={StaticResource IntToBoolConverter}}" VerticalOptions="Center" />
                        <Image Source="{Binding CheckList.pedal_freno_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.pedal_freno_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarPedalFrenoFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarPedalFrenoVideoCommand}" CommandParameter="pedal_freno_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.pedal_freno_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" Margin="0,5" TextColor="Black" />
                </StackLayout>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Pedal de estacionamiento"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.pedal_estacionamiento_SemaforoIcon}"
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.pedal_estacionamiento, Converter={StaticResource IntToBoolConverter}}" VerticalOptions="Center" />
                        <Image Source="{Binding CheckList.pedal_estacionamiento_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.pedal_estacionamiento_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarPedalEstacionamientoFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarPedalEstacionamientoVideoCommand}" CommandParameter="pedal_estacionamiento_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.pedal_estacionamiento_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" Margin="0,5" TextColor="Black" />
                </StackLayout>



                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">

                    <!-- Título + Semáforo -->
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Cinturones de seguridad (funcionamiento y fijaciones)."
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />

                        <Image Source="{Binding CheckList.cinturon_seguridad_SemaforoIcon}"
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <!-- Controles -->
                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <!-- Switch -->
                        <Switch IsToggled="{Binding CheckList.cinturon_seguridad, Converter={StaticResource IntToBoolConverter}}"
                VerticalOptions="Center" />

                        <!-- Imagen -->
                        <Image Source="{Binding CheckList.cinturon_seguridad_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer 
                    Command="{Binding ExpandImageCommand}" 
                    CommandParameter="{Binding CheckList.cinturon_seguridad_foto}" />
                            </Image.GestureRecognizers>
                        </Image>

                        <!-- Cámara -->
                        <Label Text="&#xf030;"  
               FontFamily="FA"
               FontSize="26"
               TextColor="#2196F3"
               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarCinturonSeguridadFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Video -->
                        <Label Text="&#xf03d;"  
               FontFamily="FA"
               FontSize="24"
               TextColor="#E53935"
               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarCinturonSeguridadVideoCommand}" 
                                      CommandParameter="cinturon_seguridad_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <!-- Observaciones -->
                    <Entry Text="{Binding CheckList.cinturon_seguridad_observacion}"
           Placeholder="Observaciones"
           FontSize="16"
           BackgroundColor="#F5F5F5"
           Margin="0,5"
           TextColor="Black" />
                </StackLayout>

                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Cuadro de instrumentos (funcionamiento, iluminación, testigos)." 
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.cuadro_instrumentos_SemaforoIcon}" 
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.cuadro_instrumentos, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.cuadro_instrumentos_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.cuadro_instrumentos_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarCuadroInstrumentosFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarCuadroInstrumentosVideoCommand}" CommandParameter="cuadro_instrumentos_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.cuadro_instrumentos_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" />
                </StackLayout>

                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Funcionamiento Aire Acondicionado/Calefacción." 
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.aire_acondicionado_SemaforoIcon}" 
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.aire_acondicionado, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.aire_acondicionado_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.aire_acondicionado_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarAireAcondicionadoFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarAireAcondicionadoVideoCommand}" CommandParameter="aire_acondicionado_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.aire_acondicionado_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" />
                </StackLayout>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Bocina de claxón." 
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.bocina_claxon_SemaforoIcon}" 
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.bocina_claxon, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.bocina_claxon_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.bocina_claxon_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarBocinaClaxonFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarBocinaClaxonVideoCommand}" CommandParameter="bocina_claxon_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.bocina_claxon_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" />
                </StackLayout>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Spacing="10">
                        <Label Text="Iluminación interior completa (cortesía, vanidad, guantera, etc.)" 
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"
               FontSize="18"
               FontAttributes="Bold" />
                        <Image Source="{Binding CheckList.iluminacion_interior_SemaforoIcon}" 
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center"
               HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12" VerticalOptions="CenterAndExpand">
                        <Switch IsToggled="{Binding CheckList.iluminacion_interior, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.iluminacion_interior_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" CommandParameter="{Binding CheckList.iluminacion_interior_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarIluminacionInteriorFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarIluminacionInteriorVideoCommand}" CommandParameter="iluminacion_interior_video" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <Entry Text="{Binding CheckList.iluminacion_interior_observacion}" Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" />
                </StackLayout>


                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Iluminación externa (cuartos, bajas, altas, reversa, niebla, nivel)." 
               FontSize="18" FontAttributes="Bold"
               VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                        <Image Source="{Binding CheckList.iluminacion_externa_SemaforoIcon}" 
               HeightRequest="24" WidthRequest="24"
               VerticalOptions="Center" HorizontalOptions="End"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="12">
                        <Switch IsToggled="{Binding CheckList.iluminacion_externa, Converter={StaticResource IntToBoolConverter}}" />
                        <Image Source="{Binding CheckList.iluminacion_externa_foto, Converter={StaticResource Base64ToImageSourceConverter}}"
               HeightRequest="30" WidthRequest="30" Aspect="AspectFill">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ExpandImageCommand}" 
                                      CommandParameter="{Binding CheckList.iluminacion_externa_foto}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label Text="&#xf030;" FontFamily="FA" FontSize="26" TextColor="#2196F3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarIluminacionExternaFotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Text="&#xf03d;" FontFamily="FA" FontSize="24" TextColor="#E53935">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TomarIluminacionExternaVideoCommand}" 
                                      CommandParameter="iluminacion_externa_video" />

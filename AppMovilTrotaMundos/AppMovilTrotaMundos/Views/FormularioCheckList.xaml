                    </StackLayout>

                    <Entry Text="{Binding CheckList.iluminacion_externa_observacion}" 
           Placeholder="Observaciones" FontSize="16" BackgroundColor="#F5F5F5" />
                </StackLayout>

                <StackLayout Padding="10,5" Spacing="5" BackgroundColor="White">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Sistema limpiaparabrisas completo, chorritos, plumas." 
               FontSize="18" FontAttributes="Bold"
               VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                        <Image Source="{Binding CheckList.limpiaparabrisas_SemaforoIcon}" 
